extends ./layouts/base
include ./mixins/_view_helpers

block vars
  - htmlClass = "html-writer-dashboard"
  - bodyClass = ""
  - pageTitle = "! Writer dashboard"


mixin dashboardNavigationItem(count, cssClass)
  li.writer-dashboard-navigation-item.clj-dashboard-navigation-item(class=cssClass)
    a.writer-dashboard-navigation-item-link.clj-dashboard-navigation-item-link(href="#dashboard-content")
      span.clj-dashboard-navigation-item-label
        block
      span.writer-dashboard-navigation-item-link-count.clj-dashboard-navigation-item-link-count (#{count})
      i.fa.fa-angle-right

block content
  .writer-dashboard
    .writer-dashboard-header
      h1.writer-dashboard-title.clj-dashboard-title
        a.writer-dashboard-title-link.clj-dashboard-title-link(href="/objectives/o_id") !We need more bike lanes in soho
      .writer-dashboard-stats.clj-dashboard-stats
        p.dashboard-stat.clj-dashboard-stat-participant
          span.dashboard-stat-amount.clj-dashboard-stat-participant-amount 5432
          span.dashboard-stat-title(data-l8n="content:writer-dashboard/participants-stat-title") !Participants
        p.dashboard-stat.clj-dashboard-stat-starred
          span.dashboard-stat-amount.clj-dashboard-stat-starred-amount 3210
          span.dashboard-stat-title(data-l8n="content:writer-dashboard/starred-stat-title") !Starred

    .writer-dashboard-body
      .writer-dashboard-navigation
        h2.writer-dashboard-navigation-title(data-l8n="content:writer-dashboard/questions-navigation-title") !Questions
        ul.writer-dashboard-navigation-list.clj-dashboard-navigation-list
          +dashboardNavigationItem(2000)
            | hello world
          +dashboardNavigationItem(1827, 'on')
            | How much wood can a woodchuck chuck?
          +dashboardNavigationItem(999)
            | What colour is the sky?
          +dashboardNavigationItem(210)
            | hello world
          +dashboardNavigationItem(40)
            | How much wood can a woodchuck chuck?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?
          +dashboardNavigationItem(20)
            | What colour is the sky?

      .writer-dashboard-content-container
        ul.writer-dashboard-filter-list.clj-dashboard-filter-list
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.on(href="#")
              i.fa.fa-thumbs-o-up
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button(href="#")
              i.fa.fa-thumbs-o-down
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button(href="#")
              i.fa.fa-paperclip

        .writer-dashboard-content.clj-dashboard-content#dashboard-content
          .writer-dashboard-content-stats.clj-dashboard-content-stats
            p 1827 answers from 970 people:
          ul.answer-list.clj-dashboard-answer-list
            +dashboardAnswerItem()
            +dashboardAnswerItem()
            +dashboardAnswerItem()
            +dashboardAnswerItem()

