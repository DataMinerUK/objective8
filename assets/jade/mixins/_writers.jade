mixin inviteWriterForm()
  form.invitation-posts.clj-invite-a-writer-form(method="POST", action="/")
    p.form-field
      label.form-field-label(for="writer-name")
        span.form-field-label-title(data-l8n="content:invite-writer/writer-name-label") !Writer name
        input.clj-writer-name-field.func--writer-name(id="writer-name", name="writer-name", type="text", pattern=".{3,}", title="", maxlength="50", required="required", data-l8n="attr/title:invite-writer/writer-name-attr-title")
        span.user-input-error-message.clj-writer-name-empty-error(data-l8n="content:invite-writer/writer-name-empty-validation-message") !You must provide a name
        span.user-input-error-message.clj-writer-name-length-error(data-l8n="content:invite-writer/writer-name-length-validation-message") !Names can be at most 50 characters
    p.form-field
      label.form-field-label(for="writer-email")
        span.form-field-label-title(data-l8n="content:invite-writer/writer-email-label") !Writer email
        input.clj-writer-email-field.func--writer-email(id="writer-email", name="writer-email", type="email", required="required", data-l8n="attr/title:invite-writer/writer-email-attr-title")
        span.user-input-error-message.clj-writer-email-empty-error(data-l8n="content:invite-writer/writer-email-empty-validation-message") !You must provide an email address
        span.user-input-error-message.clj-writer-email-invalid-error(data-l8n="content:invite-writer/writer-email-invalid-validation-message") !The email address is invalid
    p.form-field
      label(for="reason")
        span.form-field-label-title(data-l8n="content:invite-writer/writer-reason-label") !They should help draft this policy, because:
        span.label-helper(data-l8n="content:invite-writer/writer-reason-label-helper") !This will be displayed on the objective writer list
        textarea.clj-invitation-reason-field.func--writer-reason(id="reason", name="reason", rows="3", cols="10", maxlength="5000", title="Reasons are a maximum length of 1000 characters", required="required", data-l8n="attr/title:invite-writer/writer-reason-attr-title")
        span.user-input-error-message.clj-writer-reason-empty-error(data-l8n="content:invite-writer/writer-reason-empty-validation-message") !You must provide a reason for inviting this person
        span.user-input-error-message.clj-writer-reason-length-error(data-l8n="content:invite-writer/writer-reason-length-validation-message") !Your reason can be at most 5000 characters
    button.button.func--invite-writer(type="submit", data-l8n="content:invite-writer/invite-button") !Create an invite

mixin writerItem(name, href, photo)
  - href = href || ''
  //- photo = photo || 'http://placekitten.com/g/120/120'
  - liClojureClass = photo == "" ? "clj-writer-item-without-photo" : "clj-writer-item-with-photo"

  li.writer-item(class=liClojureClass)
    a.writer-item-link.clj-writer-profile-link(href="#{href}")
      .writer-item-photo
        if photo == ""
          i.writer-item-no-image-icon.fa.fa-user
        else
          img(src="#{photo}")
      .writer-item-text
        .writer-item-author.clj-writer-name.func--writer-name
          = name
        .writer-item-descripton
          p.clj-writer-description
            block

mixin writerItemBlank()
  li.writer-item.clj-empty-writer-list-item(data-l8n="content:writer-list/no-writers")
    | !No writers have been invited yet.

mixin draftVersionNavigationWriter(name, href, photo)
  .draft-version-writer
    .draft-version-writer-photo
      if photo == ""
        i.draft-version-writer-no-image-icon.fa.fa-user.fa-3x
      else
        img(src="#{photo}")
    .draft-version-writer-text
      .draft-version-writer-author.clj-draft-version-writer-author
        = name
      .draft-version-writer-descripton
        p.clj-draft-version-time
          block

mixin writerNote()
