extends layouts/base
include mixins/_view_helpers

block content
  .guidance-text-wrapper
    +guidanceText('!How do questions work?','content:question-page/guidance-heading')
      ul
        li(data-l8n="content:question-page/guidance-text-1") !Questions are how Objective[8] gathers community ideas to turn into policy

  .middle-container
    .question-navigation-wrapper
      .question-navigation
        .question-navigation-breadcrumb
          span.breadcrumb-ellipsis
            a(href="/objective").clj-objective-link !Write policy based on folk music.
            =" "
            | >
            =" "
            span.clj-question-breadcrumb !How many roads must a man walk...

    .question-outline#outline
      h1.question-leader.clj-question !How many roads must a man walk down before you can call him a man?

    .clj-drafting-started-wrapper

    h2(data-l8n="content:question-page/suggested-answers") !Suggested answers
    ul.answer-list#answers
      li.answer-item.approval-item.clj-answer
        .approval-content.answer-text.clj-answer-text.func--answer-text !This is the answer to the question it has a lot of text in it becasue we want to see what happens if the answer is really long. Well not really really long but at least a reasonable length in relation to everything else on the page.
        .approval-options
          form(action="/meta/up-vote", method="post").approval-vote-option.clj-approval-form
            input(type="hidden", value="!vote-on-uri", name="vote-on-uri").clj-vote-on-uri
            input(type="hidden", value="!question-path", name="refer").clj-refer
            .approval-score 
              button(type="submit").approval-button.approval-up.func--up-vote.clj-approval-button
                i.fa.fa-check
              span.clj-up-score.func--up-score !27
          form(action="/meta/down-vote", method="post").approval-vote-option.clj-approval-form
            input(type="hidden", value="!vote-on-uri", name="vote-on-uri").clj-vote-on-uri
            input(type="hidden", value="!question-path", name="refer").clj-refer
            .approval-score 
              button(type="submit").approval-button.approval-down.clj-approval-button
                i.fa.fa-times
              span.clj-down-score.func--down-score !10

      .answer-new
        form(action="!add-answer-action", method="POST").clj-answer-form
          p.form-field
            label.form-field-label
              span.answer-new-title.clj-question(for="add-an-answer") !How many roads must a man walk down before you can call him a man?
              textarea#add-an-answer.answer-reply-box.func--add-answer(rows=4, name="answer", required="required")
          button(type="submit", data-l8n="content:question-page/submit-answer-button").button.answer-reply !Add my answer
