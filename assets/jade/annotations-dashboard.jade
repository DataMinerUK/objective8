extends ./layouts/base
include ./mixins/_view_helpers

block vars
  - htmlClass = "html-writer-dashboard"
  - bodyClass = ""
  - pageTitle = "! Writer dashboard"


block content
  .writer-dashboard
    .writer-dashboard-header
      h1.writer-dashboard-title.clj-dashboard-title
        a.writer-dashboard-title-link.clj-dashboard-title-link(href="/objectives/o_id") !We need more bike lanes in soho
      .writer-dashboard-stats.clj-dashboard-stats
        p.dashboard-stat.clj-dashboard-stat-participant
          span.dashboard-stat-amount.clj-dashboard-stat-participant-amount 5432
          span.dashboard-stat-title(data-l8n="content:writer-dashboard/participants-stat-title") !Participants
        p.dashboard-stat.clj-dashboard-stat-starred
          span.dashboard-stat-amount.clj-dashboard-stat-starred-amount 3210
          span.dashboard-stat-title(data-l8n="content:writer-dashboard/starred-stat-title") !Starred

    .writer-dashboard-body
      .writer-dashboard-navigation-menu
        a.writer-dashboard-navigation-title-link.clj-writer-dashboard-navigation-questions-link(href="#", data-l8n="content:writer-dashboard/questions-navigation-title") !Questions
        a.writer-dashboard-navigation-title-link.clj-writer-dashboard-navigation-comments-link(href="#", data-l8n="content:writer-dashboard/comments-navigation-title") !Comments
        a.writer-dashboard-navigation-title-link.clj-writer-dashboard-navigation-annotations-link.on(href="#", data-l8n="content:writer-dashboard/annotations-navigation-title") !Annotations
      .writer-dashboard-navigation
        ul.writer-dashboard-navigation-list.clj-dashboard-navigation-list
          +dashboardNavigationItem(1827, 'on')
            | !Latest draft
          +dashboardNavigationItem(999)
            | !2015-05-10
