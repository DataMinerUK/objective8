            | !2015-05-02
          +dashboardNavigationItem(40)
            | !2015-05-01
      
      .writer-dashboard-content-container#dashboard-content
        ul.writer-dashboard-filter-list.clj-dashboard-filter-list
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.clj-dashboard-filter-up-votes(href="#")
              i.fa.fa-angle-up
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.clj-dashboard-filter-down-votes(href="#")
              i.fa.fa-angle-down
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.clj-dashboard-filter-paper-clip(href="#")
              i.fa.fa-paperclip

        .writer-dashboard-content.clj-dashboard-content
          .writer-dashboard-content-stats.clj-dashboard-content-stats
            p 1827 answers from 970 people:
