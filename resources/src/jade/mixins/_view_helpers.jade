include _masthead
include _questions
include _comments
include _writers

mixin guidanceText(heading)
  .guidance-text
    .guidance-buttons.clj-guidance-buttons
      a.button-hide-guidance-text(href="#")
        span Hide
        =" "
        i.fa.fa-times
    h2.guidance-text-heading.clj-guidance-heading #{heading}
    block

mixin goalItem()
  li.goal-item
    i.fa-li.fa.fa-dot-circle-o
    block

mixin voteUpDownControls()
  - voteUpCount = Math.floor(Math.random() * 100) + 1
  - voteDownCount = Math.floor(Math.random() * 100) + 1
  form.actions-up-down-vote-form.clj-up-down-vote-form(method="post")
    button.actions-vote-up.func-vote-up(type="submit", value="up", title="Vote up")
      span.actions-vote-count #{voteUpCount}
      i.fa.fa-fw.fa-angle-up
      span.vote-direction-text Vote down
    button.actions-vote-down.func-vote-down(type="submit", value="down", title="Vote down")      
      span.actions-vote-count #{voteDownCount}
      i.fa.fa-fw.fa-angle-down
      span.vote-direction-text Vote down

mixin pleaseSignIn()
  p.clj-please-sign-in
    span.clj-before-link !Please
    =" "
    a.clj-sign-in-link(href='/sign-in') !sign in
    =" "
    span.clj-after-link !to ...

mixin googleAnalytics(trackingID)
  script.clj-google-analytics.
    (function(i,s,o,g,r,a,m) {
      i['GoogleAnalyticsObject']=r;
      i[r]=i[r]||function() {(i[r].q=i[r].q||[]).push(arguments)},
      i[r].l = 1*new Date();
      a = s.createElement(o), m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a,m)})
    (window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{trackingID}', 'auto');
    ga('send', 'pageview');
